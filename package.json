{
  "name": "le-nexus",
  "version": "1.0.8-Fix2",
  "description": "Application de gestion de collections multimédias (Mangas, Animés, Jeux Adultes)",
  "author": "Nexus Team",
  "main": "electron/main.js",
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--no-deprecation concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation DEV_MODE=true concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "node scripts/start-vite-quiet.js",
    "start:electron": "electron .",
    "build": "node scripts/build-vite-quiet.js",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:win:clean": "npm run build && electron-builder --win --x64 --publish never",
    "preview": "vite preview",
    "clean:all": "node scripts/clean-all.js",
    "lint": "eslint . --ext .ts,.tsx",
    "version:update": "node scripts/update-version.js"
  },
  "build": {
    "appId": "com.lenexus.app",
    "productName": "Nexus",
    "artifactName": "Nexus-${version}.${ext}",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json",
      "assets/**/*",
      "tampermonkey/**/*"
    ],
    "asarUnpack": [
      "assets/**/*",
      "tampermonkey/**/*",
      "node_modules/@ffmpeg-installer/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexus"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.958.0",
    "@ffmpeg-installer/ffmpeg": "1.1.0",
    "bcrypt": "6.0.0",
    "better-sqlite3": "12.4.6",
    "electron-fetch": "1.9.1",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "2.1.3",
    "googleapis": "^140.0.0",
    "groq-sdk": "0.34.0",
    "jsdom": "^23.0.1",
    "lucide-react": "^0.303.0",
    "node-cron": "4.2.1",
    "protobufjs": "^7.5.4",
    "puppeteer": "24.30.0",
    "puppeteer-core": "24.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.0",
    "cross-env": "7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "3.2.9",
    "eslint": "9.39.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "16.5.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "8.46.3",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  }
}
